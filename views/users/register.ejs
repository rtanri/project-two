<div class="container mb-5 d-flex flex-column align-items-center register-box">
  <h2 class="text-center">Don't have an account</h2>
  <p class="text-center mb-5">It only takes a minute to register</p>
  <form method="POST" action="/beautylash/users/register">
    <div class="mb-3">
      <label for="full_name" class="form-label form-input-size">Full Name</label>
      <input type="text" class="form-control form-input-size" id="full_name" name="full_name"
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label form-input-size">Email</label>
      <input type="email" class="form-control form-input-size" id="email" name="email" />
    </div>

    <div class="mb-3">
      <label for="password" class="form-label form-input-size">Password</label>
      <input type="password" class="form-control form-input-size" id="password" name="password"
      />
    </div>

    <div class="mb-3">
      <label for="password_confirm" class="form-label form-input-size">Confirm Password</label>
      <input type="password" class="form-control form-input-size" id="password_confirm" name="password_confirm"
      />
    </div>
    <div class="d-flex flex-row justify-content-center mt-5">
      <button type="submit" class="btn btn-secondary frontpage-button">Sign in</button>
    </div>
    
  
</form>
</div>

