<%- include('../partials/head') %>

<div class="container my-5">
      <h1 class="text-center display-4 mb-5">Welcome to Beautylash</h1>
      <h2 class="text-center mb-3">Please fill in our detail for home-treatments:</h2>
      <form action="/beautylash/users/dashboard" method="post" >
            <div class="container my-5 d-flex flex-column align-items-center">
                  <div class="mb-3">
                        <label for="postal" class="form-label form-input-size">Postal</label>
                        <input class="form-control form-input-size" id="postal" name="postal" />
                  </div>

                  <div class="mb-3">
                        <label for="area" class="form-label mb-3 form-input-size">Area in Singapore</label>
                        <select name="area" id="area" class="form-select form-input-size">
                              <option value="" selected>Select here</option>
                              <option value="east">East (Bugis, Bedok Reservoir, Changi)</option>
                              <option value="north-east">North East (Pungol, Sengkang)</option>
                              <option value="west">West (Jurong, Clementi, Bukit Timah)</option>
                              <option value="north">North (Angmokio, Yishun)</option>
                              <option value="cbd">CBD (Telok Ayer, Tiong Bahru, Orchard)</option>
                        </select>
                  </div>

                  <div class="mb-3">
                        <label for="address" class="form-label form-input-size">Address</label>
                        <textarea class="form-control form-input-size" id="Address" name="Address" /></textarea>
                  </div>

                  <div class="d-flex flex-row justify-content-center">
                        <button type="submit" class="smallMargin btn btn-success">Submit</button>
                </div>
      </form>
</div>

<%- include('../partials/foot') %>